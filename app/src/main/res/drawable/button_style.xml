<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Цвет кнопки при нажатии -->
            <corners android:radius="4dp" /> <!-- Закругленные углы -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#2196F3" /> <!-- Цвет кнопки в обычном состоянии -->
            <corners android:radius="4dp" /> <!-- Закругленные углы -->
        </shape>
    </item>
</selector>